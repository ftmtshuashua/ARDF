<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_ActionBar"
        layout="@layout/layout_actionbar" />

    <com.lfp.androidrapiddevelopmentframework.widget.WebProgressBar
        android:id="@+id/view_WebProgressBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/Unified_Margin_LeftAndRight"
        app:layout_constraintTop_toBottomOf="@+id/layout_ActionBar" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_t_margin_basic"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/view_Set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_a_theme__defualt"
            android:gravity="center"
            android:paddingBottom="@dimen/Unified_Margin_Basic"
            android:paddingTop="@dimen/Unified_Margin_Basic"
            android:text="设置进度为10%"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TextSize_Content" />


        <TextView
            android:id="@+id/view_Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_a_theme__defualt"
            android:gravity="center"
            android:paddingBottom="@dimen/Unified_Margin_Basic"
            android:paddingTop="@dimen/Unified_Margin_Basic"
            android:text="进度增加20%"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TextSize_Content" />


        <TextView
            android:id="@+id/view_Subtract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_a_theme__defualt"
            android:gravity="center"
            android:paddingBottom="@dimen/Unified_Margin_Basic"
            android:paddingTop="@dimen/Unified_Margin_Basic"
            android:text="进度减少20%"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TextSize_Content" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>