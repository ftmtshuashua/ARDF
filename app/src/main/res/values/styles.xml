        <item name="android:textColor">@color/colorBlack_Content</item>
        <item name="android:textColorHint">@color/colorBlack_Explain</item>
        <item name="android:windowBackground">@color/colorBlack_Backgroung</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
