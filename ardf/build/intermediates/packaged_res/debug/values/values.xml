<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShadowView"><attr format="integer" name="shadow_style">
            <flag name="left" value="1"/>
            <flag name="top" value="2"/>
            <flag name="right" value="4"/>
            <flag name="bottom" value="8"/>
        </attr><attr format="dimension" name="shadow_distance"/><attr format="dimension" name="shadow_radius"/><attr format="dimension" name="shadow_dx"/><attr format="dimension" name="shadow_dy"/><attr format="color|reference" name="shadow_color">
            <enum name="black" value="0x88000000"/>
        </attr></declare-styleable>
    <style name="BaseDialogStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
</resources>